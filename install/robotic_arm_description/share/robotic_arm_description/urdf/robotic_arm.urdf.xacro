<?xml version="1.0"?>
<robot name="robotic_arm" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find robotic_arm_description)/urdf/materials.xacro" />

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotic_arm_description/meshes/visual/base_link.stl" scale="0.001 0.001 0.001"/> 
        </geometry>
      <material name="wood_color"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.3 0.1"/> </geometry>
    </collision>
  </link>
  
  <joint name="lead_screw_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lead_screw_link"/>
    <origin xyz="0.15 0 0.2" rpy="0 0 0"/> 
  </joint>

  <link name="lead_screw_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotic_arm_description/meshes/visual/lead_screw.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="metal_grey"/>
    </visual>
  </link>
  
  <xacro:macro name="wheel" params="prefix x_pos y_pos z_pos roll yaw mesh_file">
    
    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_wheel"/>
      <origin xyz="${x_pos} ${y_pos} ${z_pos}" rpy="0 0 ${yaw}"/> 
      <axis xyz="0 1 0"/> </joint>

    <link name="${prefix}_wheel">
      <visual>
        <origin xyz="0 0 0" rpy="${roll} 0 0"/> 
        <geometry>
          <mesh filename="package://robotic_arm_description/meshes/visual/${mesh_file}" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="wheel_black"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${roll} 0 0"/>
        <geometry>
           <cylinder length="0.05" radius="0.1"/> </geometry>
      </collision>
    </link>
  </xacro:macro>

