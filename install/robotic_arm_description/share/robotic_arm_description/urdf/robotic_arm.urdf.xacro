  <joint name="lift_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="lift_link"/>
    <origin xyz="0.1 0 0.1" rpy="0 0 0"/> 
    <axis xyz="0 0 1"/> <limit lower="0" upper="0.5" effort="100" velocity="0.5"/>
  </joint>

  <link name="lift_link"> <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotic_arm_description/meshes/visual/arm_link_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="metal_grey"/>
    </visual>
  </link>

  <joint name="shoulder_joint" type="revolute">
    <parent link="lift_link"/>
    <child link="arm_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/> 
    <axis xyz="0 0 1"/> <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>
  </joint>

  <link name="arm_link"> <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotic_arm_description/meshes/visual/arm_link_2.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="plastic_white"/>
    </visual>
  </link>

  <joint name="elbow_joint" type="revolute">
    <parent link="arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0.3 0 0" rpy="0 0 0"/> 
    <axis xyz="0 0 1"/>
    <limit lower="-2.0" upper="2.0" effort="100" velocity="1.0"/>
  </joint>

  <link name="forearm_link"> <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotic_arm_description/meshes/visual/arm_link_3.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="plastic_white"/>
    </visual>
  </link>

  <joint name="wrist_joint" type="revolute">
    <parent link="forearm_link"/>
    <child link="gripper_base_link"/>
    <origin xyz="0.3 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>
  </joint>

  <link name="gripper_base_link"> <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotic_arm_description/meshes/visual/gripper_base.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gripper_orange"/>
    </visual>
  </link>

  <joint name="left_finger_joint" type="revolute">
    <parent link="gripper_base_link"/>
    <child link="left_finger"/>
    <origin xyz="0.05 0.02 0" rpy="0 0 0"/> <axis xyz="0 0 1"/>
    <limit lower="0" upper="0.5" effort="10" velocity="1"/>
  </joint>

  <link name="left_finger">
    <visual>
      <geometry>
        <mesh filename="package://robotic_arm_description/meshes/visual/left_gripper.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gripper_orange"/>
    </visual>
  </link>

  <joint name="right_finger_joint" type="revolute">
    <parent link="gripper_base_link"/>
    <child link="right_finger"/>
    <origin xyz="0.05 -0.02 0" rpy="0 0 0"/> <axis xyz="0 0 -1"/> <limit lower="0" upper="0.5" effort="10" velocity="1"/>
  </joint>

  <link name="right_finger">
    <visual>
      <geometry>
        <mesh filename="package://robotic_arm_description/meshes/visual/right_gripper.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gripper_orange"/>
    </visual>
  </link>

</robot>